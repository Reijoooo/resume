{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Nodemon Launch Server",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "runtimeExecutable": "nodemon",
        "runtimeArgs": [
          "--inspect"
        ],
        "program": "${workspaceRoot}/server.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  